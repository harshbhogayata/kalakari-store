# ============================================
# KALAKARI BACKEND - ENVIRONMENT CONFIGURATION
# ============================================

# === ENVIRONMENT ===
NODE_ENV=development
PORT=5000

# === DATABASE ===
# MongoDB connection string
# Development: mongodb://localhost:27017/kalakari
# Production: Use MongoDB Atlas - mongodb+srv://user:password@cluster.mongodb.net/kalakari
MONGODB_URI=mongodb://localhost:27017/kalakari

# === SECURITY - SECRETS ===
# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production
CSRF_SECRET=your-super-secure-csrf-secret-change-this-in-production

# === CORS ===
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:5000

# === PAYMENT GATEWAY - RAZORPAY ===
# Get from: https://dashboard.razorpay.com/
# Live Mode: Use production keys
# Test Mode: Use test keys (amount > 1000 will fail)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxx

# === EMAIL SERVICE ===
# Using Gmail with App Passwords
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM_NAME=Kalakari Shop

# Alternative: Using SendGrid
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# === SMS SERVICE ===
# Using Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# === FILE STORAGE ===
# Local storage (development)
# STORAGE_TYPE=local

# AWS S3 (production)
# STORAGE_TYPE=s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_S3_BUCKET=kalakari-uploads
AWS_S3_URL=https://kalakari-uploads.s3.amazonaws.com

# === LOGGING ===
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# === API RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === FEATURE FLAGS ===
# Enable/disable features
ENABLE_PAYMENT=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ARTISAN_REGISTRATION=true
ENABLE_ADMIN_PANEL=true

# === PRODUCTION SETTINGS ===
# Only set to true in production
ENABLE_HTTPS=false
TRUST_PROXY=true

# === MONITORING & ANALYTICS ===
# Optional: Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# === ADMIN CREDENTIALS (for seed/setup) ===
# Change these after initial setup
ADMIN_EMAIL=admin@kalakari.shop
ADMIN_PASSWORD=temporary-admin-password